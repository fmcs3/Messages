<div class="container">
  <div class="row">
    <div class="center-block">
      <div class="form-group">
                <%= form_for(@message) do |f| %>

                  <%= f.label :title  %>
                  <%= f.text_field :title %>

                  <%= f.label :message %>
                  <%= f.text_field :message %>

                  <%= f.submit nil, :class => 'btn btn-success' %>

                <% end %>

      </div>
    </div>
  </div>
</div>
