<% if flash[:error] %>
  <p><%= flash[:error]%></p>
<% end %>

<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
            <%= form_for(:session, url: new_login_path) do |f| %>
                <%= f.email_field :email, :placeholder => "Email" %>
                <%= f.password_field :password, :placeholder => "Password"%>
                <%= f.submit "Login", class: "btn btn-default"%>
            <% end %>
      </div>
    </div>
  </div>
</div>
</body>
