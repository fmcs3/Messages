<div class="container">
  <div class="row">
    <div class="center-block">
                <%= form_for(@message) do |f| %>

                  <%= f.text_field :title, :placeholder => "Title" , :class => 'center-block'  %>
                  <%= f.text_field :message, :placeholder => "Message" , :class => 'center-block' %>

                  <%= f.submit nil, :class => 'center-block' %>

                <% end %>

    </div>
  </div>
</div>
